<Page x:Class="MultimediaTutorial.CurrentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultimediaTutorial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CurrentPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        
        <Button Grid.Column="3" Content=">" Click="BtnNext_Click" FontSize="33" Background="LightCoral"/>
        <Button Grid.Column="0" Content="&lt;" Click="BtnBack_Click" FontSize="33" Background="LightCoral"/>

        <TextBlock Text="Ff" Grid.Column="1" x:Name="tbSymbol" HorizontalAlignment="Center" FontSize="200" VerticalAlignment="Center"/>
        <Button Grid.Column="2" Click="btnAlph_Click" Background="LightPink">
            <Image x:Name="iSymbol"/>
        </Button>
    </Grid>
</Page>
