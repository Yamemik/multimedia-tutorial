<Page x:Class="MultimediaTutorial.TimePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultimediaTutorial"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button  Grid.Column="2" Grid.RowSpan="3" Content=">" Click="BtnNext_Click" FontSize="33" Background="LightCoral"/>
        <Button Grid.RowSpan="3" Content="&lt;" Click="BtnBack_Click" FontSize="33" Background="LightCoral"/>

        <TextBlock Grid.Column="1" Text="Времена в английском языке" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="32"/>
        <Image Grid.Column="1" Grid.Row="1" Source="Times.png"/>
    </Grid>
</Page>
